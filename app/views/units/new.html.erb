<div class = 'main_form'>
	
<%= form_for @unit do |f| %>
<%= render 'shared/error_messages', :object => f.object %> 


<div>
	<%= f.label :location, 'Location:' %>
	<%= f.select :location, options_for_select( selectify( regions.keys ) ) %>
</div>
<br />
<div>
	<%= f.label :kind, 'Kind:' %>
	<%= f.select :kind, options_for_select( selectify( ['fleet', 'army'] ) ) %>
</div>

<br />
<div>
	<span><%= f.submit "Create"%></span>
</div>

<% end %>

</div>