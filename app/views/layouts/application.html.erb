<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag "/style/master.css" %>
  <link rel="stylesheet" href="./jquery-ui/css/sparkle/ui.css" />
  <link rel="stylesheet" href="./jquery-ui/css/sparkle/jquery-ui-1.10.3.custom.css" />
  <style> .maintitle {background-color: <%= title_color %>;}</style>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <script src="./jquery-ui/js/jquery-ui-1.10.3.custom.js"></script>
  <link rel="stylesheet" href="/smallipop/css/jquery.smallipop.css" type="text/css" media="all" title="Screen"/>
  <script type="text/javascript" src="/smallipop/lib/jquery.smallipop.min.js"></script>
  <script type="text/javascript" src="/smallipop/lib/main.js"></script>
  <script type="text/javascript" src="/smallipop/lib/modern.js"></script>
  <script type="text/javascript" src="/smallipop/lib/jquery.smallipop.js"></script>
  <%= javascript_include_tag :pages %>
  <script>
   $(function() {
     $( "#dialog" ).dialog();
	 $( ".unit" ).draggable();
	 $(".pop").smallipop();
   });
  </script>
</head>

<% if @title == 'Map' %><body class = 'map_body'><% else %><body class = 'mainbody'><% end %>
	
	<div class = 'page'>
	<div class = 'maintitle'>
		<span><h2 id = 'headinger'><%= @heading %></h2>
		<ul class = 'mainnav'>
			<li><%= link_to "Home", "/" %></li>
			<li><%= link_to "Map", "/map" %></li>
			<li><%= link_to "Players", "/players" %></li>
			<% if signed_in? %>
			<li><%= link_to "Settings", "/users/#{@current_user.id}/edit"%></li>
			<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
			<% else %>
			<li><%= link_to "Sign in", signin_path, :method => :delete %></li>
			<% end %>
		</ul></span>
	</div>
	<div class = 'primary' >
		
		<% if @title == 'Map' %><div class = 'maintitle toptitle'>
			<span><h2 id = 'headinger'><%= @heading %></h2>
			<ul class = 'mainnav'>
				<li><%= link_to "Home", "/" %></li>
				<li><%= link_to "Map", "/map" %></li>
				<li><%= link_to "Players", "/players" %></li>
				<% if signed_in? %>
				<li><%= link_to "Settings", "/users/#{@current_user.id}/edit"%></li>
				<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
				<% else %>
				<li><%= link_to "Sign in", signin_path, :method => :delete %></li>
				<% end %>
			</ul></span>
		</div><% end %>
		
		<% flash.each do |key, value| %>
		<div class = "flash_<% key %>">
			<p><%= value %></p>
		</div>
		
		
		<% end %>
		
		<%= yield %>
		
		<%# debug(params) if Rails.env.development? %>
		<%# params if Rails.env.development? %>
        
        
        
	    </div>
        <div id = 'devil' style = 'opacity:0;display:none;position:fixed;top:200px;right:30%;width:40%'><a href = 'http://www.666.com'><img style = 'width:100%' src = '/images/devil.png'></a></div>
        
    
	<div id="footer">
		<p>Copywrite 2013, Charles Chamberlain, All Rights Reserved</p>
	</div>
    
    
    
     
    
    
    
    
    
	</div>
</body>
</html>
