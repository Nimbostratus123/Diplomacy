<div class = 'main_form'>
<%= form_for(:session, :url => sessions_path) do |f| %>
	<div class = 'field'>
		<%= f.label :email, 'E-mail:' %>
		<span id = 'email'><%= f.text_field :email %></span>
	</div>
	
	<div class = 'field'>
		<%= f.label :password, 'Password:' %>
		<%= f.password_field :password %>
	</div>
	
	<div class = 'actions'>
		<%= f.submit "Sign in" %>
	</div>
<% end %>
</div>
<p class = 'signing' >New User? <%= link_to "Sign up now!", join_path %></p>