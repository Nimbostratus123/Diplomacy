<div class = 'main_form'>
	
<%= form_for @user do |f| %>
<%= render 'shared/error_messages', :object => f.object %> 


<div>
	<%= f.label :name %><br />
	<%= f.text_field :name %>
</div>

<div>
	<%= f.label :email %><br />
	<%= f.text_field :email %>
</div>

<div>
	<%= f.label :password %><br />
	<%= f.password_field :password %>
</div>

<div>
	<%= f.label :password_confirmation, "Confirmation" %><br />
	<%= f.password_field :password_confirmation %>
</div>

<div>
	<%= f.select :nation, options_for_select([["England", 'england'], ['France', 'france'], ['Germany', 'germany'], ['Italy', 'italy'], ['Russia', 'russia'], ['Austria', 'austria'], ['Turkey', 'turkey']], @user.nation) %>
</div>

<div>
	<%= f.submit "Join"%>
</div>

<% end %>

</div>