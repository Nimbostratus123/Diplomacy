





<div class = 'user_bio'>
	<% if User.find_by_id(params[:id]).bio %>
	<p><%= "''#{User.find_by_id(params[:id]).bio}'' -- #{User.find_by_id(params[:id]).name}" %></p>
	<% else %>
	<p>This user has not yet written their bio.</p>
	<% end %>
</div>

<% if right_user? %>

<div class = 'main_form bio_form'><form>
	<textarea rows='<% if current_user.bio %>2<% else %>10<% end %>' cols='60' name="bio">
<% if current_user.bio %><%= current_user.bio %><% else %>Your strategy and personality...<% end %></textarea><br />
	<input type="submit" value="<% if current_user[:bio] %>Update<% else %>Create<% end %> Bio">
</form></div>

<div class = "mainflag"><%= image_tag("../images/flags/large/#{@user.nation}.jpeg") %></div>
<% end %>